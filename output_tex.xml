    <location position="start">
     <![CDATA[\author{----CONTENT----}]]>
    </location>
  </requires>
</node>



<!-- h1 -->
<node>
<key>h1</key>
  <from>
    <![CDATA[<INHALT]]>
  </from>
  <to>
    <![CDATA[\section{
    INHALT
    }]]>
  </to>
</node>


<!-- h2 -->
<node>
<key>h2</key>
  <from>
    <![CDATA[<INHALT]]>
  </from>
  <to>
    <![CDATA[\subsection{
    INHALT]]>
    }
  </to>
</node>


<!-- h3 -->
<node>
<key>h1</key>
  <from>
    <![CDATA[<INHALT]]>
  </from>
  <to>
    <![CDATA[\subsubsection{
    INHALT
    }]]>
  </to>
</node>


<!-- br  -->
<node>
  <key>br</key>
  <from>
  </from>
  <to>
