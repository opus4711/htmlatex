<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE tex [
<!ELEMENT tex (node*)>
<!ELEMENT node ((key, from, to, requires?)*)>
<!ELEMENT to (#PCDATA)>
<!ELEMENT key (#PCDATA)>
<!ELEMENT from (#PCDATA)>
<!ELEMENT requires (location*)>
<!ELEMENT location (#PCDATA)>

<!ATTLIST location position (start|content|end) "content">
]>

<!-- Tags: html, head, body, title, author, h1, h2, h3, hr, br, table, th, tr, 
td, b, a, dl, dt, dd, font, noscript, script, ul, li, link,!doctype -->

<tex>

<!-- html -->
<node>
  <key>
   html
  </key>
  <from>
    <![CDATA[<
----CONTENT----
    ]]>
  </from>
  <to>
    <![CDATA[ 
    ]]>
  </to>
</node>

<!-- head  -->
<node>
  <key>head</key>
  <from><![CDATA[
  <----CONTENT----]]>
  </from>
  <to><![CDATA[]]></to>
  <requires>
    <location position="start"><![CDATA[
    \documentclass[a4paper,% DIN A4
    fontsize=12pt		% Schriftgröße 12 Punkt
    ]{scrartcl}                 % 'article' aus dem 'Koma'-Script]]>
    </location>
  </requires>
</node>


<!-- title -->
<node>
  <key>title</key>
  <from><![CDATA[<
----CONTENT----
    ]]>
  </from>
  <to>
    <![CDATA[
    ]]>
  </to>
  <requires>
    <location position="start">
     <![CDATA[\title{----CONTENT----}]]>
    </location>
  </requires>
</node>



<!-- body  -->
<node>
  <key>
   body
  </key>
  <from>
    <![CDATA[<
----CONTENT----
    ]]>
  </from>
  <to>
    <![CDATA[
    \begin{document}
----CONTENT----
\end{document}
    ]]>
  </to>
</node>



<!-- author -->
